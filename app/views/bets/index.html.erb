<p id="notice"><%= notice %></p>

<h1>Bets</h1>

<table>
  <thead>
    <tr>
      <th>Ammount</th>
      <th>Bet state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.ammount %></td>
        <td><%= bet.bet_state %></td>
        <td><%= link_to 'Show', user_bet_path(bet.user_id, bet.id) %></td>
        <td><%= link_to 'Edit', edit_user_bet_path(bet.user_id, bet.id) %></td>
        <td><%= link_to 'Destroy', user_bet_path(bet.user_id, bet.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bet', new_user_bet_path(params[:user_id]), user_id: params[:user_id]%>
