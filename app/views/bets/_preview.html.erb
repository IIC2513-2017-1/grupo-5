  <%= m.event_id %>
</div>
<div>
  <% if m.name %>
    <%= m.name %>
  <% else %>
    <%= m.id %>
  <%end %>
</div>
<div>
  <%= t.name %>
</div>
<div>
  <%= bet.ammount %> Coins
</div>
<div class"bet-actions-subtable">
