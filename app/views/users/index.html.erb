<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="users">

  <div class="users-list">
    <% @users.each do |user| %>
      <% if !current_user || user.id != current_user.id %>
        <div class="user-stream-item">
          <div class="user-image user-element">
            <%= image_tag user.avatar.url(:thumb) %>
          </div>
          <div class="user-information user-element">

            <div class="user-email user-attribute">
              <strong>Email:</strong>
              <%= user.email %>
            </div>
            <div class="user-name user-attribute">
              <strong>Name:</strong>
              <%= user.first_name %>
              <%= user.last_name %>
            </div>
            <div class="user-email user-attribute">
              <strong>Coins:</strong>
              <%= user.coins %>
            </div>

          </div>
          <div class="user-actions user-element">
            <%= link_to 'Show', user %>
            <%= following_button(user) %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<br>
