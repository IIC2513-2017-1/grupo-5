<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Password</th>
      <th>Coins</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !current_user || user.id != current_user.id %>
        <tr>
          <td><%= image_tag user.avatar.url(:thumb) %></td>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.password %></td>
          <td><%= user.coins %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= following_button(user) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
