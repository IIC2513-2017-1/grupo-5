<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="users">

  <ul>
    <% @users.each do |user| %>
      <% if !current_user || user.id != current_user.id %>
        <li class="user-stream-item">
          <%= image_tag user.avatar.url(:thumb) %>>
          <%= user.email %>
          <%= user.first_name %>
          <%= user.last_name %>
          <%= user.password %>
          <%= user.coins %>
          <%= user.role %>
          <%= link_to 'Show', user %>
          <%= following_button(user) %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>

<br>
