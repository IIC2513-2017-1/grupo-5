<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th>Match date</th>
      <th>Bet date</th>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.where("event_id = ?", params[:event_id]).each do |match| %>
      <tr>
        <td><%= match.match_date %></td>
        <td><%= match.bet_date %></td>
        <td><%= match.name %></td>
        <td><%= match.state %></td>
        <td><%= link_to 'Show', event_match_path(match.event_id, match.id) %></td>
        <td><%= link_to 'Edit', edit_event_match_path(match.event_id, match.id) %></td>
        <td><%= link_to 'Destroy', event_match_path(match.event_id, match.id), method: :delete, data: { confirm: 'Are you sure? This will destroy all the match bets' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_event_match_path(params[:event_id]), event_id: params[:event_id] %>
