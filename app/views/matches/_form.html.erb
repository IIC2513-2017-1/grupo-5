<h1>New Match</h1>
<div class="form-box box">


  <% match = Match.new %>
  <%= form_for(match) do |f| %>
    <% if match.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

        <ul>
          <% match.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :match_date %>
      <br>
      <%= f.date_select :match_date, required: true %>
    </div>

    <div class="field">
      <%= f.label :bet_date %>
      <br>
      <%= f.date_select :bet_date, required: true %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, default: "" %>
    </div>

    <%= f.hidden_field :event_id, :value => @event.id %>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
