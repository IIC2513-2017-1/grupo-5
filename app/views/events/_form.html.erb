<div class="form-box box">

  <%= form_for(event) do |f| %>
  <% if event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
      <% event.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :event_type %>
    <br>
    <%= f.text_field :event_type, required: true %>
  </div>

  <div class="field">
    <%= f.label :private %>
    <br>
    <%= f.check_box :private %>
  </div>

  <div class="field">
    <%= f.label :date_start %>
    <br>
    <%= f.date_select :date_start, required: true %>
  </div>

  <div class="field">
    <%= f.label :date_end %>
    <br>
    <%= f.date_select :date_end, required: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
</div>
