<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :event_type %>
    <%= f.text_field :event_type, required: true %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect {|user| [user.id]}, {include_blank: true}, {required: true} %>
  </div>

  <div class="field">
    <%= f.label :private %>
    <%= f.check_box :private %>
  </div>

  <div class="field">
    <%= f.label :date_start %>
    <%= f.date_select :date_start, required: true %>
  </div>

  <div class="field">
    <%= f.label :date_end %>
    <%= f.date_select :date_end, required: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
