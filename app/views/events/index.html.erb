<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Gestor</th>
      <th>Private</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_type %></td>
        <td><%= User.find(event.user_id).email %></td>
        <td><%= event.private %></td>
        <td><%= event.date_start %></td>
        <td><%= event.date_end %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) if current_user && current_user.id == event.user_id %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } if current_user && current_user.id == event.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

