<!DOCTYPE html>
<html>
  <head>
    <title>Apuestas GGEZ</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="page_logo">
        <%= link_to root_path do%>
          <img src="http://i.imgur.com/AinBr1x.png"/>
        <% end %>
      </div>

      <div id="user_bar">
        <% if current_user %>
          <div class="name">
            Bienvenido, <%= link_to current_user.first_name, current_user %>
          </div>
          <%= link_to 'Cerrar sesión', session_path, method: :delete %>
        <% else %>
          <%= link_to 'Iniciar sesión', new_session_path %>
        <% end %>
      </div>

      <nav id="main_menu">
        <%= link_to 'Usuarios', users_path %>
        <%= link_to 'Eventos', events_path %>
      </nav>

    </header>
    <main>
      <% [:alert, :notice].each do |flash_type| %>
        <% if (flash_message = flash[flash_type]).present? %>
          <div class="<%= flash_type %>">
            <%= flash_message %>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
